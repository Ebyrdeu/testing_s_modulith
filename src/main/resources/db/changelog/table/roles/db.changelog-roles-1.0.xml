<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

	<!--CREATE-->
	<changeSet id="1738604377051-1" author="Maxim Khnykin">
		<preConditions onFail="MARK_RAN">
			<not>
				<tableExists tableName="roles"/>
			</not>
		</preConditions>
		<createTable tableName="roles">
			<column name="id" type="bigint" autoIncrement="true">
				<constraints primaryKey="true" nullable="false"/>
			</column>

			<column name="role"
			        type="varchar(15)"
			        defaultValue="ROLE_USER"/>

			<column name="created_at"
			        type="timestamp"
			        defaultValueComputed="now()"/>
			<column name="updated_at"
			        type="timestamp"
			        defaultValueComputed="now()"/>
		</createTable>
	</changeSet>

	<!--CONSTRAINT-->
	<changeSet id="1738604605696-1" author="Maxim Khnykin">
		<preConditions onFail="MARK_RAN">
			<tableExists tableName="roles"/>
		</preConditions>
		<sql>
			alter table roles
				add constraint role_enum
					check ( role in ('ROLE_USER', 'ROLE_VENDOR', 'ROLE_ADMIN'))
		</sql>
	</changeSet>

	<!--INSERT-->
	<changeSet id="1738604796974-1" author="Maxim Khnykin">
		<preConditions onFail="MARK_RAN">
			<tableExists tableName="roles"/>
		</preConditions>
		<insert tableName="roles">
			<column name="role" value="ROLE_USER"/>
		</insert>
	</changeSet>

	<changeSet id="1738604873690-1" author="Maxim Khnykin">
		<preConditions onFail="MARK_RAN">
			<tableExists tableName="roles"/>
		</preConditions>
		<insert tableName="roles">
			<column name="role" value="ROLE_VENDOR"/>
		</insert>
	</changeSet>

	<changeSet id="1738604878416-1" author="Maxim Khnykin">
		<preConditions onFail="MARK_RAN">
			<tableExists tableName="roles"/>
		</preConditions>
		<insert tableName="roles">
			<column name="role" value="ROLE_ADMIN"/>
		</insert>
	</changeSet>
</databaseChangeLog>